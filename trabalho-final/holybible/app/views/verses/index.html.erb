<p id="notice"><%= notice %></p>

<h1>Verses</h1>

<table>
  <thead>
    <tr>
      <th>Version</th>
      <th>Testament</th>
      <th>Book</th>
      <th>Chapter</th>
      <th>Verse</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @verses.each do |verse| %>
      <tr>
        <td><%= verse.version %></td>
        <td><%= verse.testament_id %></td>
        <td><%= verse.book_id %></td>
        <td><%= verse.chapter %></td>
        <td><%= verse.verse %></td>
        <td><%= verse.text %></td>
        <td><%= link_to 'Show', verse %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

