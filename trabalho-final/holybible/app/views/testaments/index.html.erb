<p id="notice"><%= notice %></p>

<h1>Testaments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @testaments.each do |testament| %>
      <tr>
        <td><%= testament.name %></td>
        <td><%= link_to 'Show', testament %></td>
        <td><%= link_to 'Edit', edit_testament_path(testament) %></td>
        <td><%= link_to 'Destroy', testament, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Testament', new_testament_path %>
